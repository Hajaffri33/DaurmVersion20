<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".student_panel">




    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="265dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/blur"
        app:srcCompat="@drawable/blur" />
    .

    <TextView
        android:id="@+id/student_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:text="Student Panel"
        android:textColor="#C9FBFA"
        android:textSize="18sp" />

    <Button
        android:id="@+id/time_table"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="203dp"
        android:layout_marginStart="21dp"
        android:background="@drawable/custom_btn_bg"
        android:drawableLeft="@drawable/ic_timetable"
        android:drawableStart="@drawable/ic_timetable"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="21dp" />

    <Button
        android:id="@+id/next_session"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/time_table"
        android:layout_marginEnd="27dp"
        android:background="@drawable/custom_btn_bg"
        android:drawableLeft="@drawable/ic_nextsession"
        android:layout_alignParentRight="true"
        android:layout_marginRight="27dp" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView4"
        android:layout_marginStart="35dp"
        android:text="TimeTable"
        android:textColor="#C9FBFA"
        android:textSize="16sp"
        android:layout_marginLeft="35dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="167dp"
        android:text="Ongoing Session"
        android:textColor="#C9FBFA"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/next_session"
        android:layout_alignTop="@+id/textView4"
        android:text="Next Session"
        android:textColor="#C9FBFA"
        android:textSize="16sp"
        android:layout_alignLeft="@+id/next_session" />



    <Button
        android:id="@+id/spanel_signout"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="31dp"
        android:layout_marginEnd="62dp"
        android:text="Sign out"
        android:background="@drawable/custom_btn_bg"
        android:textSize="14sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="62dp" />

    <Button
        android:id="@+id/ongoing_session"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/time_table"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_btn_bg"
        android:drawableLeft="@drawable/ic_ongoin_session" />


</RelativeLayout>