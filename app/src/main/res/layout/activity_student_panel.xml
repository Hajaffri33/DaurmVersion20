<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".student_panel">




    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="265dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/blur"
        app:srcCompat="@drawable/blur" />
    .

    <TextView
        android:id="@+id/student_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:text="@string/student_panel"
        android:textColor="#C9FBFA"
        android:textSize="18sp" />

    <Button
        android:id="@+id/time_table"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="175dp"
        android:layout_marginStart="80dp"
        android:background="@drawable/custom_btn_bg"
        android:drawableLeft="@drawable/ic_timetable"
        android:drawableStart="@drawable/ic_timetable"
        android:onClick="timetable"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="80dp" />

    <Button
        android:id="@+id/next_session"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/time_table"
        android:layout_marginEnd="85dp"
        android:background="@drawable/custom_btn_bg"
        android:drawableLeft="@drawable/ic_nextsession"
        android:onClick="next"
        android:layout_alignParentRight="true"
        android:layout_marginRight="85dp"
        android:drawableStart="@drawable/ic_nextsession" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView6"
        android:layout_marginStart="98dp"
        android:text="@string/timetable"
        android:textColor="#C9FBFA"
        android:textSize="16sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="98dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/next_session"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="130dp"
        android:text="@string/next_session"
        android:textColor="#C9FBFA"
        android:textSize="16sp"
        android:layout_alignRight="@+id/next_session" />



    <Button
        android:id="@+id/spanel_signout"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="31dp"
        android:layout_marginEnd="62dp"
        android:text="@string/sign_out"
        android:background="@drawable/custom_btn_bg"
        android:textSize="14sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="62dp" />


</RelativeLayout>